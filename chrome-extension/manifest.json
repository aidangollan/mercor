{
    "manifest_version": 3,
    "name": "LinkedIn Connection Uploader",
    "version": "1.0",
    "description": "Adds a button on the LinkedIn Connections page to upload connections.",
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/mynetwork/invite-connect/connections*"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "http://localhost:3000/*"
    ]
  }